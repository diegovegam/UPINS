@model UPINS.Models.ViewModels.LoginViewModel
@{
}

<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">
			<h1 class="mt-3 mb-3 h3">
				Inicio de sesión
			</h1>

			<form method="post">

				<div class="mb-3">
					<label class="form-label">Usuario</label>
					<input type="text" id="username" class="form-control" asp-for="Username" required></input>
					<span class="text-danger" asp-validation-for="Username"></span>
				</div>

				<div class="mb-3">
					<label class="form-label">Contraseña</label>
					<input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"></input>
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>

				<div class="mb-3">
					<button type="submit" class="btn btn-dark">Iniciar sesión</button>
				</div>

				<input type="hidden" asp-for="ReturnedUrl" />

			</form>
			@if (ViewBag.IsLoginSuccessful == false)
			{
				<div class="alert alert-danger" role="alert">
					No se pudo iniciar sesión. Los credenciales son incorrectos.
				</div>
			}

		</div>
	</div>

</div>

