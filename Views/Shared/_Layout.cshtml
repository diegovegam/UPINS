
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UPINS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UPINS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" >UPINS</a>
                @if (signInManager.IsSignedIn(User))
                {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @if(User.IsInRole("Admin"))
                            {
                                <li>
                            <a class="nav-link " asp-controller="AdminUsers" asp-action="List" >
                                Usuarios
                            </a>
                                </li>
                            }
                            else
                            {
                                <li>
                            <a class="nav-link disabled" aria-disabled="true">
                                Usuarios
                            </a>
                        </li>
                            }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Productos 
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="AdminProducts" asp-action="List">Ver Productos</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Facturación</a>
                            <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Billing" asp-action="ShoppingCart">Facturar</a></li>
                                <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="AdminBills" asp-action="GetBills">Facturas</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                }
                <div class="d-flex align-items-center">

						@if (signInManager.IsSignedIn(User))
						{
							<div class="me-3 text-light">
								@User?.Identity?.Name
							</div>

							<a class="btn me-3 bg-light text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Cerrar sesión</a>
						}
						else
						{
							<a class="btn me-3 bg-light text-dark" asp-area="" asp-controller="Account" asp-action="Login">Iniciar sesión</a>

						}
						
					</div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UPINS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
